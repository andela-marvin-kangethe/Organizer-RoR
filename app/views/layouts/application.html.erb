<!DOCTYPE html>
<html>
  <head>
    <title>Organizer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <div class="mdl-layout mdl-js-layout">
      <header class="organiza-header mdl-layout__header">
        <div class="mdl-layout-icon"></div>
        <div class="mdl-layout__header-row">
          <span class="mdl-layout__title">Organiza</span>
          <div class="mdl-layout-spacer"></div>
          <nav class="mdl-navigation">
            <a href="#" class="mdl-navigation__link">Login</a>
          </nav>
        </div>
      </header>
      <div class="organiza-drawer mdl-layout__drawer">
        <span class="mdl-layout__title">Organiza</span>
        <nav class="mdl-navigation">
          <a href="#" class="mdl-navigation__link">Login</a>
        </nav>
      </div>
      <main class="organiza-background mdl-layout__content">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
