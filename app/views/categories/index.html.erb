<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col">
    Add category
    <div class="add-category-form">
      <form action="#">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="category-title">
          <label class="mdl-textfield__label" for="category-title">Title</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <textarea class="mdl-textfield__input" type="text" rows= "3" id="category-description" ></textarea>
          <label class="mdl-textfield__label" for="category-description">Description</label>
        </div>
      </form>
      <button class="organiza-add-category-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect">
        <i class="material-icons">arrow_forward</i>
      </button>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--8-col">
    <% @categories.each do |category| %>
      <div class="organiza-card mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text"><%= category.title %></h2>
        </div>
        <div class="mdl-card__supporting-text">
          <%= category.description %>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <!-- Colored icon button -->
          <button class="mdl-button mdl-js-button mdl-button--icon mdl-color--green mdl-color-text--white">
            <i class="material-icons">edit</i>
          </button>
          <button class="mdl-button mdl-js-button mdl-button--icon mdl-color--red mdl-color-text--white">
            <i class="material-icons">delete</i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
